generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Relative {
  id           Int    @id @default(autoincrement())
  userId       Int
  name         String
  dob          String
  address      String
  phone        String @unique
  relationship String @default("Unknown")

  @@unique([userId, name, dob])
}

model Payment {
  id        Int    @id @default(autoincrement())
  userId    Int
  date      String
  amount    Float
  recipient String
  phone     String
  details   String

  @@unique([userId, date, recipient])
}